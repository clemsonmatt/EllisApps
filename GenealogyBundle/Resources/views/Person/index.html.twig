{% extends 'EllisAppsGenealogyBundle:Shared:layout.html.twig' %}

{% block content %}
    <div class="row">
        {% for person in people %}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="panel panel-custom panel-click" data-url="{{ path('ellisapps_genealogy_person_show', {'family': person.family.id, 'person': person.id}) }}">
                    <div class="panel-body">
                        <div class="panel-body-card panel-body-card-md">
                                {# name #}
                                {{ person }}<br>

                                {# dates #}
                                <small class="text-muted">
                                    {{ person.birthDate|date('m/d/Y') }}
                                    &mdash;
                                    {% if person.deathDate %}
                                        {{ person.deathDate|date('m/d/Y') }}
                                    {% else %}
                                        {{ icon('ban') }}
                                    {% endif %}
                                </small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
