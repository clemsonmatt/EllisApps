{% extends 'EllisAppsEcommerceBundle:Shared:layout.html.twig' %}

{% block pre_content %}
    <div class="bg-secondary">
        <div class="container" style="min-height: 200px;">
            <div class="checkout-wrap">
                <ul class="checkout-bar">
                    <li class="visited first">Login</li>
                    <li class="visited">
                        <a href="{{ path('ellisapps_ecommerce_shipping') }}">
                            Shipping &amp; Billing
                        </a>
                    </li>
                    <li class="active">Review &amp; Payment</li>
                    <li class="next">Complete</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <br>
    <h3 class="primary-color">Review</h3>
    {% for i in 0..4 %}
        <div class="panel panel-custom">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3 col-md-2">
                        <div style="background-color: #eee; min-width: 100%; min-height: 100px;">
                            &nbsp;
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <h3 class="secondary-color">Item 1</h3>
                        <strong>Details Here</strong>
                    </div>
                    <div class="col-sm-6">
                        <h3 class="primary-color text-center">$19.99</h3>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <br>
    <h3 class="primary-color">Credit Card Information</h3>
    <div class="panel panel-custom">
        <div class="panel-body">
            <br>
            <div class="row">
                <div class="col-sm-8">
                    <div class="row">
                        <br>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" placeholder="Credit Card Number">
                        </div>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" placeholder="Expiration Date">
                        </div>
                        <div class="col-sm-4">
                            <input class="form-control" type="text" placeholder="CVV">
                        </div>
                    </div>
                </div>
                <div class="col-sm-4" style="border-left: 1px solid #eee;">
                    <p class="text-center secondary-color">
                        <i class="fa fa-cc-visa fa-5x"></i>
                        <i class="fa fa-cc-mastercard fa-5x"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix">
        <div class="pull-right">
            <h3 class="primary-color">Total: $119.99</h3>
            <a href="{{ path('ellisapps_ecommerce_checkout_finished') }}" class="btn btn-custom pull-right">
                <i class="fa fa-check"></i> Process My Order
            </a>
        </div>
    </div>
    <br><br>
{% endblock %}
