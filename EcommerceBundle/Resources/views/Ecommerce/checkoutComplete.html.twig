{% extends 'EllisAppsEcommerceBundle:Shared:layout.html.twig' %}

{% block pre_content %}
    <div class="bg-secondary">
        <div class="container" style="min-height: 200px;">
            <div class="checkout-wrap">
                <ul class="checkout-bar">
                    <li class="visited first">Login</li>
                    <li class="visited">
                        <a href="{{ path('ellisapps_ecommerce_shipping') }}">
                            Shipping &amp; Billing
                        </a>
                    </li>
                    <li class="previous visited">
                        <a href="{{ path('ellisapps_ecommerce_review') }}">
                            Review &amp; Payment
                        </a>
                    </li>
                    <li class="active last">Complete</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <br>
    <div class="panel panel-custom">
        <div class="panel-heading">
            <div class="pull-right">
                <button class="btn btn-custom">
                    <i class="fa fa-print"></i> Print
                </button>
            </div>
            <i class="fa fa-check"></i> Purchase Complete!
        </div>
        <div class="panel-body">
            <p class="text-muted">
                Your orders have been recieved and are being processed shortly. You will recieve a confirmation
                email shortly with the details of your transaction. If you need to change any of your purchases,
                follow the link here to cancel any recent purchases. You will be emailed when your purcahsed items
                have shipped and will be given any tracking details.
                <br><br>
                Please call 1-(234)-456-8900 or email customerservice@xyzinc.com if you have any additional questions
                <br><br>
                Please print this page for your records.
            </p>
        </div>
    </div>
    <br>

    <h3 class="primary-color">Your Purchases</h3>
    {% for i in 0..4 %}
        <div class="panel panel-custom">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3 col-md-2">
                        <div style="background-color: #eee; min-width: 100%; min-height: 100px;">
                            &nbsp;
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <h3 class="secondary-color">Item 1</h3>
                        <strong>Details Here</strong>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <h3 class="primary-color text-center">$19.99</h3>
                            </div>
                            <div class="col-sm-6">
                                <br>
                                <button class="btn btn-custom btn-block">
                                    Shipping Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
