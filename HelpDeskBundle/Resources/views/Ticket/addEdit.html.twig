{% extends 'EllisAppsHelpDeskBundle:Shared:layout.html.twig' %}

{% block content %}
    <div class="panel panel-custom">
        <div class="panel-heading">
            <a href="{{ path('ellisapps_helpdesk_ticket_index') }}">
                All Tickets
            </a>
            &raquo;
            Add Ticket
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
                <div class="row clearfix">
                    <div class="col-md-6">
                        {{ form_row(form.category) }}
                        {{ form_row(form.subject) }}
                        {{ form_row(form.personName) }}
                        {{ form_row(form.personEmail) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_rest(form) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-custom pull-right">
                    Submit
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
